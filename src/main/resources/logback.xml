<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<appender name="stdout_json" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%level %logger %msg %n</pattern>
		</encoder>
		<!-- <encoder class="net.logstash.logback.encoder.LogstashEncoder" /> -->
	</appender>
	
	<logger name="org.springframework.data.elasticsearch.core.ElasticsearchTemplate" level="trace" additivity="false">
		<appender-ref ref="stdout_json" />
	</logger>


	<logger name="no.nav" level="debug" additivity="false">
		<appender-ref ref="stdout_json" />
	</logger>

	<root level="info">
		<appender-ref ref="stdout_json" />
	</root>

</configuration>